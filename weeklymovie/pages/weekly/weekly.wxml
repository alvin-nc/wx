<view>
  <swiper class="movie-swiper" indicator-dots="{{true}}" previous-margin="50rpx" next-margin="50rpx" current="{{currentIndex}}">
    <swiper-item class="movie" wx:for="{{weeklyMovieList}}" wx:key="item">
      <view class="container movie-card" bindtap="f1" data-uaer-name="blabla" data-movie-id="{{item.id}}">
        <image class="movie-image" src="{{item.imagePath}}"></image>
        <text>{{item.id}}</text>
        <text>第{{item.index}}周：{{item.name}}</text>
        <text>豆瓣点评：{{item.comment}}</text>
        <text wx:if="{{item.isHighlyRecommended}}">强烈推荐</text>
        <text catchtap="f0" wx:if="{{index < (weeklyMovieList.length - 1)}}" class='return-button'>返回本周</text>
      </view>
    </swiper-item>
  </swiper>
</view>